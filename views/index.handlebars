<h1>EatABurger!</h1>
<div class = "burger-block">
  <img src = "/assets/img/burger.png" style = "width:200px">
</div>
<div id = "burger-container">
  <div class = "burger-block">
  <h2>Burgers Not Eaten</h2>

<!--displays all the burgers not eaten-->
    <ul>
    {{#each burgers}}
      {{#unless devoured}}
          <li>{{burger_name}}<button class = "devourit" data-id= {{id}}> Devour it</button></li>
      {{/unless}}
    {{/each}}

    </ul>
  </div>

  <div class = "burger-block">
      <h2>Burgers Eaten</h2>
  <!--displays all the burgers that have been eaten, also gives the option to delete the burgers-->

      <ul>
      {{#each burgers}}
        {{#if devoured}}
            <li>{{burger_name}} has been eaten<button class = "deleteit" data-id= {{id}}>X</button></li>
        {{/if}}
      {{/each}}
      </ul>
  </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgeradd">burger name:</label>
    <input type="text" id="ba" name="name">
  </div>

  <button class = "addburger" type="submit">Add Burger</button>
</form>
<p>Enter a burger here. Then click the buttont to add it. You can also eat burgers</p>